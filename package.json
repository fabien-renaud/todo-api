        "joi": "^17.4.2",
        "morgan": "^1.10.0",
        "split": "^1.0.1",
        "swagger-ui-express": "^4.1.6",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "@types/morgan": "^1.9.3",
        "@types/split": "^1.0.0",
        "@types/swagger-ui-express": "^4.1.3",
        "dotenv": "^10.0.0",
        "esbuild": "^0.14.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^16.0.0",
