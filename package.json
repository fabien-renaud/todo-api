{
    "name": "todo-api",
    "version": "0.0.1",
    "description": "Todo API in Express TS",
    "main": "src/index.ts",
    "scripts": {
        "prebuild": "npm run generate",
        "build": "node esbuild.js",
        "prestart": "npm run generate",
        "start": "ts-node-dev -r dotenv/config src/index.ts",
        "test": "jest",
        "lint": "eslint --fix",
        "generate": "npm run generate:swagger && npm run generate:types",
        "generate:swagger": "swagger-cli bundle src/openapi/v1/openapi.yaml --type yaml --outfile src/core/openapi.yaml",
        "generate:types": "/bin/sh ./bin/generate-types-from-schema.sh",
        "validate": "npm run validate:lint && npm run validate:prettier && npm run validate:typescript",
        "validate:lint": "eslint src",
        "validate:prettier": "prettier --check ./src/**/*.ts",
        "validate:typescript": "prettier --check ./src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@google-cloud/firestore": "^4.15.1",
        "express": "^4.17.1",
        "express-openapi": "^9.3.1",
        "morgan": "^1.10.0",
        "split": "^1.0.1",
        "swagger-ui-express": "^4.1.6",
        "winston": "^3.3.3",
        "yaml": "^1.10.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "@types/morgan": "^1.9.3",
        "@types/split": "^1.0.0",
        "@types/swagger-ui-express": "^4.1.3",
        "dotenv": "^10.0.0",
        "esbuild": "^0.14.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^16.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.3.1",
        "prettier": "^2.5.0",
        "swagger-cli": "^4.0.4",
        "swagger-typescript-api": "^9.3.1",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.2"
    }
}
