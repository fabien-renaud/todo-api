{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "baseUrl": ".",
        "skipLibCheck": true,
        "target": "ES2019",
        "moduleResolution": "Node",
        "outDir": "tsc-out",
        "typeRoots" : ["./node_modules/@types", "./typings"]
    },
    "include": [
        "src/**/*"
    ]
}